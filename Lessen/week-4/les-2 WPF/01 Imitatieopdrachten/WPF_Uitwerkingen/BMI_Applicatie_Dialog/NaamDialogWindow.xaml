<Window x:Class="BMI_Applicatie_Dialog.NaamDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMI_Applicatie_Dialog"
        mc:Ignorable="d"
        Title="Naam" Height="128" Width="299">
    <Grid>
        <Label x:Name="label" Content="Wat is je naam?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NaamTextBox" HorizontalAlignment="Left" Margin="108,14,0,0" TextWrapping="Wrap" Text="Sonja" VerticalAlignment="Top" Width="155"/>
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="108,65,0,0" VerticalAlignment="Top" Width="75" Click="OkButton_Click" IsDefault="True"/>
        <Button x:Name="AnnulerenButton" Content="Annuleren" HorizontalAlignment="Left" Margin="188,65,0,0" VerticalAlignment="Top" Width="75" IsCancel="True"/>

    </Grid>
</Window>
